// =================================
// = Patches for jquery_mobile.css =
// =================================
// Make their css work with the asset pipeline for images.
.ui-icon-loading {
	background-image: url("<%= NoPlanB::Helpers::DeviceAssetPathHelper.device_image_path 'jquery_mobile/ajax-loader.gif' %>") ;
}
.ui-icon-alt {
	background-image: url("<%= NoPlanB::Helpers::DeviceAssetPathHelper.device_image_path 'jquery_mobile/icons-18-black.png' %>") ;
}

.ui-icon, .ui-icon-searchfield:after {
	background-image: url("<%= NoPlanB::Helpers::DeviceAssetPathHelper.device_image_path 'jquery_mobile/icons-18-white.png' %>") 
}


@media only screen and (-webkit-min-device-pixel-ratio: 1.5),
       only screen and (min--moz-device-pixel-ratio: 1.5),
       only screen and (min-resolution: 240dpi) {
	
       	.ui-icon-plus, .ui-icon-minus, .ui-icon-delete, .ui-icon-arrow-r,
       	.ui-icon-arrow-l, .ui-icon-arrow-u, .ui-icon-arrow-d, .ui-icon-check,
       	.ui-icon-gear, .ui-icon-refresh, .ui-icon-forward, .ui-icon-back,
       	.ui-icon-grid, .ui-icon-star, .ui-icon-alert, .ui-icon-info, .ui-icon-home, .ui-icon-search, .ui-icon-searchfield:after, 
       	.ui-icon-checkbox-off, .ui-icon-checkbox-on, .ui-icon-radio-off, .ui-icon-radio-on, .ui-icon-email , .ui-icon-page,
       	.ui-icon-question , .ui-icon-foursquare , .ui-icon-twitter , .ui-icon-facebook , .ui-icon-dollar , .ui-icon-euro,
       	.ui-icon-pound , .ui-icon-apple , .ui-icon-chat , .ui-icon-trash , .ui-icon-bell , .ui-icon-mappin , .ui-icon-direction,
       	.ui-icon-heart , .ui-icon-wrench , .ui-icon-play , .ui-icon-pause , .ui-icon-stop , .ui-icon-person , .ui-icon-music,
       	.ui-icon-rss , .ui-icon-wifi , .ui-icon-phone , .ui-icon-power , .ui-icon-lock , .ui-icon-flag , .ui-icon-calendar,
       	.ui-icon-lightning , .ui-icon-drink , .ui-icon-android , .ui-icon-edit {
		background-image: url("<%= NoPlanB::Helpers::DeviceAssetPathHelper.device_image_path 'jquery_mobile/icons-36-white.png' %>");
		-moz-background-size: 776px 18px;
		-o-background-size: 776px 18px;
		-webkit-background-size: 776px 18px;
		background-size: 776px 18px;
	}
	.ui-icon-alt {
		background-image: url("<%= NoPlanB::Helpers::DeviceAssetPathHelper.device_image_path 'jquery_mobile/icons-36-black.png' %>");
	}
}



