<div id="<%= @notification.social_action %>" data-role="page"  data-theme="c">

  <div class="ui-bar ui-bar-b">
  	<h1><%= @notification.occasion.name %> &nbsp; &nbsp; <span style="font-size:8px">(<%= @notification.social_action %>)</span></h1>
  </div>
	
	<div data-role="content">
    <table border="0" cellspacing="0" cellpadding="0" class="landing_photo_block">
      <col style="width:33%">
      <col style="width:33%">
      <col style="width:auto">
      <tr>
        <% [1,2].each do |i| %>
          <td><div class="thumbnail" onclick="$.mobile.changePage('#get_the_app_enlarge', {transition: 'flip'});"><%= image_tag("web/thumb#{i}.jpg") %></div></td>
        <% end %>
        <td valign="center" style="text-align:center"><a href='#get_the_app' data-rel='dialog' data-transition='flip'><em>more&hellip;</em></a></td>
      </tr>
    </table>
    
    <ul data-divider-theme="b" data-theme="b" data-inset="true" data-role="listview">
      <li data-role="list-divider" >From: <%= @notification.sender.fullname %></li>
      <li class="npb-wrap npb-medium" data-corners="false" data-shadow="false"  data-wrapperels="div" data-theme="d">
        <p><strong>Hey <%= @notification.recipient.short_name %></strong>,  <%= personal_message(@notification.social_action) %> <a href='#get_the_app' data-rel='dialog' data-transition='flip'><%= @notification.occasion.name %></a>!</p>
        <p>We're using <a href='#get_the_app' data-rel='dialog' data-transition='flip'><%= site_name %></a> to see the photos everyone here is snapping today. Please take a second and <a href='#get_the_app' data-rel='dialog' data-transition='flip'>download the app</a>! &nbsp;&nbsp;<strong>- <%= @notification.sender.short_name %></strong></p>
      </li>
    </ul>
    
    <%= render :partial => 'call_to_action', :locals => {:data_inset => true} %>
    <%= render :partial => 'breaking_participation' %>
  </div>
</div>
